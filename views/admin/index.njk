{% extends "./layout.njk"%}

{% block content %}
  <h1 class="title">Gerenciar Receitas</h1>
  <section class="admin-cards">
    {% for recipe in recipes %}
      <div class="card horizontal">
        <img src="{{recipe.image}}" class="card-img">
        <div class="description">
          <h3>{{recipe.title}}</h3>
          <p>por {{recipe.author}}</p>
          <a href="/admin/recipe/{{recipe.id}}" class="link">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </section>
 {% endblock %}

